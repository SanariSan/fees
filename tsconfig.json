{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": false,
    // "outDir": "./dist",
    "rootDir": "./",
    // "baseUrl": "./",
    "incremental": true,
    "forceConsistentCasingInFileNames": false,
    "skipLibCheck": true,
    "alwaysStrict": true,
    // settings affecting coding
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    // every rule from "strict"
    "noImplicitAny": false, // todo: true
    "strictPropertyInitialization": false,
    "strictBindCallApply": false, // todo: true
    "noImplicitThis": false, // todo: true
    "strictFunctionTypes": false, // todo: true
    "useUnknownInCatchVariables": false,
    "strictNullChecks": false, // todo: true

    "preserveConstEnums": true,
    "noEmit": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "**/*.test.ts"]
}
